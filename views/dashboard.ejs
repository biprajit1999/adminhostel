<!DOCTYPE html>
<html lang="en">
    <div id="navbar"></div>
	<script>
		fetch('navbar.html')
		.then(response => response.text())
		.then(html => {
			document.getElementById('navbar').innerHTML = html;
		})
		.catch(error => {
			console.error('Error fetching the navbar:', error);
		});

	</script>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"
          integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u"
          crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="./css/style.css">
    <style>
        .bt {
            display: flex;
            gap: 2px;
        }
        body {
        background-color: rgba(237, 236, 239, 0.8);
        background-image: url('https://source.unsplash.com/1920x1080/?hotel');
        background-repeat: no-repeat;
        background-size: cover;
        background-position: center center;
        position: relative;
        min-height: 100vh;
        min-width: 100vw;
    }
    h1, p, tr, td, th, table {
            color: #f8eeee; 
        }
    table {
        color: #343232; 
        text-align: center;
    }
    </style>
    
</head>
<body>
<br>
<br>
<br>
<div class="container" style="background-color: rgb(2, 2, 8);">
    <div class="row">
        <div class="col-md-12">
            <h1 style="color: #ece6e6;">Paradise Cove Retreat User Dashboard</h1>
            <table class="table table-bordered">
                <thead>
                <tr>
                    <th>Name</th>
                    <th>Phone</th>
                    <th>Aadhar</th>
                    <th>Room</th>
                    <th>Check In</th>
                    <th>Check Out</th>
                    <th>Email</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                <% users.forEach(function(user) { %>
                <tr id="userRow_<%= user.id %>">
                    <td><%= user.name %></td>
                    <td><%= user.phone %></td>
                    <td><%= user.aadhar %></td>
                    <td><%= user.room %></td>
                    <td><%= user.checkIn %></td>
                    <td><%= user.checkOut %></td>
                    <td><%= user.email %></td>
                    <td>
                        <div class="bt">
                            <button class="btn btn-success" onclick="window.location.href='/update'">Update</button><br>
                            <button class="btn btn-danger" onclick="deleteUser('<%= user.aadhar %>')">Delete</button><br>
                        </div>
                    </td>
                </tr>
                <% }); %>
                </tbody>
            </table>
        </div>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<script>
    function deleteUser(id) {
        $.ajax({
            url: '/survey_form/delete/' + id,
            type: 'DELETE',
            success: function (response) {
                console.log(response);
                alert('Record deleted successfully!');
                
                $("#userRow_" + id).remove();
                location.reload();

            },
            error: function (error) {
                console.log(error);
                alert('Error deleting the record!');
            }
        });
    }
</script>
</body>

<div id="footer" style="position: fixed; left: 0; bottom: 0; width: 100%;"></div>
	<script>
		fetch('footer.html')
		.then(response => response.text())
		.then(html => {
			document.getElementById('footer').innerHTML = html;
		})
		.catch(error => {
			console.error('Error fetching the footer:', error);
		});
	</script>
</html>
